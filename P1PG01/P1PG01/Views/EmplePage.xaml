<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P1PG01.Views.EmplePage">

    <ContentPage.ToolbarItems>
         <ToolbarItem Text="Agregar"
                     Clicked="ToolbarItem_Clicked" />

        <ToolbarItem Text="Photo"
                     Clicked="ToolbarItem_Clicked_1" />

        <ToolbarItem Text="Voz"
                     Clicked="ToolbarItem_Clicked_2"/>
        
        <ToolbarItem Text="Maps"
                     Clicked="ToolbarItem_Clicked_3" />
    </ContentPage.ToolbarItems>
    
    
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="ListaEmpleados"  ItemTapped="ListaEmpleados_ItemTapped" >

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding nombres}" Detail="{Binding apellidos}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>